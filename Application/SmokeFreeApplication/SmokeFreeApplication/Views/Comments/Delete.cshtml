@model SmokeFreeApplication.Models.Comment

@{
    Layout = null;
    string cmtToDivModal = "modal_cmt" + Model.commentID.ToString();
}



<div class="modal fade" id="@cmtToDivModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Delete this comment?</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div>
                    <div class="d-flex">
                        <div class="mr-auto">
                            <h6>@Html.DisplayFor(model => model.userName)</h6>
                        </div>
                        <div>
                            <p class="text-muted">@Html.DisplayFor(model => model.postDate)</p>
                        </div>
                    </div>
                    <div>
                        @Html.DisplayFor(model => model.body)
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                @using (Html.BeginForm("Delete", "Comments", new { id = Model.commentID }, FormMethod.Post, null))
                {
                    @Html.AntiForgeryToken()

                    <div class="form-actions no-color">
                        <input type="submit" onclick="this.form.submit();" value="Delete" class="btn btn-primary" />
                    </div>
                }
            </div>
        </div>
    </div>
</div>