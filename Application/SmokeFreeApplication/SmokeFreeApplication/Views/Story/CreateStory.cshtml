@model SmokeFreeApplication.Models.Story

@{
    ViewBag.Title = "CreateStory";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<br />
<div>
    @Html.ActionLink("Back to List", "Stories")
</div>
<br />
<h2>Create Story</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

<form onsubmit="return false;">
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

    <div class="form-group">
        <p>Title: </p>
        <div>
            @Html.TextBoxFor(model => model.title, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.title, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <p>Description: </p>
        <div>
            @Html.TextAreaFor(model => model.body, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.body, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <p>Tags: </p>
        <div>
            <input name="tagsinput" type="text" data-role="tagsinput"/>
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="button" onclick="this.form.submit();" value="Create" class="btn btn-default" />
        </div>
    </div>
</form>
}
