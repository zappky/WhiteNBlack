
@model SmokeFreeApplication.Models.Doctor
@{
    ViewBag.Title = "Doctor Manage";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="card" style="width: 70rem;">

    <div class="card-header">
        <img src="@Url.Action("retrieveUserPic", "Admin", new { username = Model.userName })" style="width:5rem; height:5rem; float:left;" alt="Image" />
        <div style="height:5rem; padding-top:30px; padding-left:100px;">
            <h6 class="card-subtitle mb-2 text-muted">Posted on : @Html.DisplayFor(modelItem => Model.doctorID)</h6>
            <h6 class="card-subtitle mb-2 text-muted">By : @Html.DisplayFor(modelItem => Model.userName)</h6>
        </div>
    </div>
    <div class="card-body">
        <h3 class="card-title">@Html.DisplayFor(modelItem => Model.workLocation)</h3>
        <p class="card-text">@Html.DisplayFor(modelItem => Model.description)</p>
    </div>

    </a>
</div>

<nav class="navbar navbar-expand-lg navbar-light bg-light">

    <div class="collapse navbar-collapse" id="navbarColor03">
        <ul class="navbar-nav mr-auto">
            <li class="nav-item active nav-link">
                @Html.ActionLink("Close", "CloseDoc", "Admin", new SmokeFreeApplication.Controllers.DocQuery(Model.userName), null)
            </li>
            @if (Model.adminVerify == false)
            {
                <li class="nav-item active nav-link">
                    @Html.ActionLink("Approve", "ApproveDoc", "Admin", new SmokeFreeApplication.Controllers.DocQuery(Model.userName), null)
                </li>
                <li class="nav-item active nav-link">
                    @Html.ActionLink("Reject", "RejectDoc", "Admin", new SmokeFreeApplication.Controllers.DocQuery(Model.userName), null)
                </li>
            }



        </ul>

    </div>
</nav>
