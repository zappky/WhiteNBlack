
@model SmokeFreeApplication.Controllers.emailableModel<SmokeFreeApplication.Models.Doctor>

@{
    ViewBag.Title = "Doctor Manage";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    .btnStyle {
        padding: 0;
        line-height: 0;
    }
</style>

<div class="card">

    <div class="card-header">
        <img src="@Url.Action("retrieveUserPic", "Admin", new { username = Model.model.userName })" style="width:5rem; height:5rem; float:left;" alt="Image" />
        <div style="height:5rem; padding-top:30px; padding-left:100px;">
            <h6 class="card-subtitle mb-2 text-muted">Doctor ID: @Html.DisplayFor(modelItem => Model.model.doctorID)</h6>
            <h6 class="card-subtitle mb-2 text-muted">Doctor Username : @Html.DisplayFor(modelItem => Model.model.userName)</h6>
        </div>
    </div>
    <div class="card-body">
        <p class="card-text">@Html.DisplayFor(modelItem => Model.model.workLocation)</p>
        <p class="card-text">@Html.DisplayFor(modelItem => Model.model.contactNo)</p>
        <p class="card-text">@Html.Raw(Model.model.description)</p>
    </div>

    </a>
</div>

<nav class="navbar navbar-expand-lg navbar-light bg-light">

    <div class="collapse navbar-collapse" id="navbarColor03">
        <ul class="navbar-nav mr-auto">
            <li class="nav-item active nav-link">
                @Html.ActionLink("Close", "CloseDoc", "Admin", new SmokeFreeApplication.Controllers.DocQuery(Model.model.userName), null)
            </li>
            @if (Model.model.adminVerify == false)
            {
                <li class="nav-item active nav-link">
                    @Html.ActionLink("Approve", "ApproveDoc", "Admin", new SmokeFreeApplication.Controllers.DocQuery(Model.model.userName), null)
                </li>
                <li class="nav-item active nav-link">
                    @*
                        @Html.ActionLink("Reject", "RejectDoc", "Admin", new SmokeFreeApplication.Controllers.DocQuery(Model.model.userName), null)
                    *@
                    <a href="#" data-target="#MyModal" data-toggle="modal">Reject</a>
                    <div class="modal" id="MyModal" role="dialog">
                        <div class="modal-dialog">
                            <div class="modal-content">

                                <fieldset style="margin: 70px;">
                                    <legend>
                                        Rejection Email
                                    </legend>

                                    @using (Html.BeginForm("RejectDoc", "Admin", FormMethod.Post, new { enctype = "multipart/form-data" }))
                                    {
                                        @Html.HiddenFor(m => Model.model.userName);
                                        @Html.ValidationSummary()
                                        <div class="form-group row">
                                            <label class="col-sm-2 col-form-label">Subject: </label>
                                            <div class="col-sm-10">
                                                @Html.TextBoxFor(m => Model.emailModel.Subject, new { @placeholder = "Registration rejected - Thank you for your interest", @class = "form-control" })
                                            </div>
                                        </div>
                                        <div class="form-group row">
                                            <label class="col-sm-2 col-form-label">Body: </label>
                                            <div class="col-sm-10">
                                                @Html.TextAreaFor(m => Model.emailModel.Body, new { @placeholder = "Hi Sir/Mdm,\nSorry, we have deemed you unfit to be accepted. Please submit another one request\nThank you", @class = "form-control", @rows=5 })
                                            </div>
                                        </div>
                                        <div class="form-group-lg">
                                            <input type="submit" class="btn btn-primary" value="Send" />
                                            <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>

                                        </div>

                                    }

                                </fieldset>
                            </div>
                        </div>
                    </div>
                </li>
            }
        </ul>
        <ul class="navbar-nav mr-auto">
            <li class="nav-item active justify-content-end">
                @Html.ActionLink("Previous", "PrevDoc", "Admin", new SmokeFreeApplication.Controllers.DocQuery(Model.model.userName), null)
            </li>
            <li class="nav-item active justify-content-end">
                @Html.ActionLink("Next", "NextDoc", "Admin", new SmokeFreeApplication.Controllers.DocQuery(Model.model.userName), null)
            </li>
        </ul>

    </div>
</nav>
