@model PagedList.IPagedList<SmokeFreeApplication.Models.Story>
@using PagedList.Mvc;
<link href="/Content/PagedList.css" rel="stylesheet" type="text/css" />

@{
    ViewBag.Title = "MemberProfile";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div style="margin-left: 5px; margin-top: 10px;">
    <table>
        <tr>
            <td>
                <img src="@Url.Action("RetrieveMemberPic", "InterestedParty", new { username = ViewBag.username})" style="width:10rem; height:10rem; float:left; margin-right:10px;" alt="Image" />
            </td>
            <td>
                <h3>@ViewBag.memberName</h3>
                <span class="text-muted">Bio</span>
                <p>@ViewBag.memberBio</p>
            </td>
        </tr>
        <tr>
            <td>
                @if (ViewBag.ownAccount == true)
                {
                    <button class="btn btn-secondary">@Html.ActionLink("Create Story", "CreateStory", "Story")</button>
                }
            </td>
            <td>
                @if (ViewBag.ownAccount == true)
                {
                    <button class="btn btn-secondary">@Html.ActionLink("Edit Profile", "EditMemberProfile", "InterestedParty")</button>
                }
            </td>
            <td>
                @if (ViewBag.ownAccount == true && ViewBag.smokerOrNot == true)
                {
                    <button class="btn btn-secondary">@Html.ActionLink("Track my progress", "TrackProgress", "InterestedParty")</button>
                }
            </td>
        </tr>
    </table>
</div>

<h2>Stories</h2>

@foreach (var item in Model)
{
    <div class="card" style="width: 70rem;">
        <a href="@Url.Action("ViewStory", "Story", new { id = item.storyID })" style="text-decoration: none;">
            <div class="card-header">
                <div style="height:1rem;">
                    <h6 class="card-subtitle mb-2 text-muted">Posted on : @Html.DisplayFor(modelItem => item.postDate)</h6>
                </div>
            </div>
            <div class="card-body">
                <h3 class="card-title">@Html.DisplayFor(modelItem => item.title)</h3>
                <div class="card-text">@Html.Raw(item.body)</div>
            </div>
            <div class="card-footer">
                <a href="@Url.Action("ViewStory", "Story", new { id = item.storyID })" style="text-decoration: none;">Read More</a>
            </div>
        </a>
    </div>
    <br />
}
<!---linking pager to search display-->
Page @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) of @Model.PageCount
@Html.PagedListPager(Model, page => Url.Action("MemberProfile", new { page, viewUsername = ViewBag.username }))

<!--Search script-->
@section Scripts
{
    <script type="text/javascript" src="~/Scripts/search.js"></script>
}
