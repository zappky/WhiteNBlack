
@{
    ViewBag.Title = "SignIn";
    Layout = "~/Views/Account/_SignInLayout.cshtml";
}

@model SmokeFreeApplication.Models.GeneralUser
@using (Html.BeginForm("SignInAsMember", "Account", FormMethod.Post))
{
    <style>
        .btnSignIn{
            margin: 10px;
        }
        .btnSignUp{
            margin:10px;
        }
    </style>

    <h4>Member Sign In</h4>
    <div class="form-group-row">
        <div class="col-sm-12">
            <span class="badge badge-danger">@TempData["loginFailed"]</span>
        </div>
    </div>

    <div class="form-group row">
        <label class="col-sm-2 col-form-label">@Html.LabelFor(m => m.userName)</label>
        <div class="col-sm-10">

            @Html.TextBoxFor(m => m.userName, "", new { @class = "form-control", @placeholder = "Username", required = "required" })

        </div>
    </div>

    <div class="form-group row">
        <label class="col-sm-2 col-form-label">@Html.LabelFor(m => m.password)</label>
        <div class="col-sm-10">

            @Html.PasswordFor(m => m.password, new { @class = "form-control", @placeholder = "Password", required = "required" })

        </div>
    </div>

    <div class="form-group row">
        <input class="btn btn-primary btnSignIn" type="submit" value="Sign In" />
        <button class="btn btn-secondary btnSignUp"> @Html.ActionLink("Sign Up", "SignUpMember", "Account")</button>
    </div>
}




