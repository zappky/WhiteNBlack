
@{
    ViewBag.Title = "SignUpDoctor";
    Layout = "~/Views/Shared/_SignUpLayout.cshtml";
}

@model SmokeFreeApplication.Models.Doctor
@using (Html.BeginForm("SignUpAsDoctor", "Account", FormMethod.Post))
{
    <div class="form-group">
        <label>User Name</label>
        <div class="form-control">
            @Html.TextBoxFor(m => m.userName, new { placeholder = "Username", required = "required" })
        </div>
    </div>

    <div class="form-group">
        <label>Password</label>
        <div class="form-control">
            @Html.PasswordFor(m => m.password, new { placeholder = "Password", required = "required" })
        </div>
    </div>

    <div class="form-group">
        <label>Name</label>
        <div class="form-control">
            @Html.TextBoxFor(m => m.name, new { placeholder = "Name", required = "required" })
        </div>
    </div>

    <div class="form-group">
        <label>Email</label>
        <div class="form-control">
            @Html.TextBoxFor(m => m.email, new { type = "email", placeholder = "abc@gmail.com", required = "required" })
        </div>
    </div>

    <div class="form-group">
        <label>Date Of Birth</label>
        <div class="form-control">
            @Html.TextBoxFor(m => m.dateOfBirth, new { @type = "date", required = "required" })
        </div>
    </div>

    <div class="form-group">
        <label>Gender</label>
        <div class="form-control">

            @Html.RadioButtonFor(m => m.gender, "Male", new { required = "required" })
            Male

            @Html.RadioButtonFor(m => m.gender, "Female", new { required = "required" })
            Female

            @Html.RadioButtonFor(m => m.gender, "Others", new { required = "required" })
            Prefer not to say


        </div>

    </div>

    <div class="form-group">
        <label>Name of practice place</label>
        <div class="form-control">
            @Html.TextBoxFor(m => m.workLocation, new { placeholder = "e.g. Tan Tock Seng", required = "required" })
        </div>
    </div>

    <div class="form-group">
        <label>Contact Number</label>
        <div class="form-control">
            @Html.TextBoxFor(m => m.contactNo, new { type = "number", placeholder = "61234567", required = "required" })
        </div>
    </div>

    <div class="form-group">
        <label>Doctor Identification</label>
        <div class="form-control">
            @Html.TextBoxFor(m => m.doctorID, new {placeholder = "e.g. M12345A / MP1234A", required = "required" })
        </div>
    </div>


    <div class="form-group">
        <label>Profile Picture</label>
        <input type="file" name="profilePicture" id="fileUpload" />
    </div>



    <div class="form-group">
        <input class="btn btn-primary" type="submit" value="Sign Up" />
    </div>
}



