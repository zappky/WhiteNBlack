
@{
    ViewBag.Title = "SignInAdmin";
    Layout = "~/Views/Account/_SignInLayout.cshtml";
}

@model SmokeFreeApplication.Models.GeneralUser
@using (Html.BeginForm("SignInAsAdmin", "Account", FormMethod.Post))
{
    <div class="form-group row">
        <label class="col-sm-2 col-form-label">@Html.LabelFor(m => m.userName)</label>
        <div class="col-sm-10">
            <p class="form-control-plaintext">
                @Html.TextBoxFor(m => m.userName, "", new { @class = "form-control", @placeholder = "Username", required = "required" })
            </p>
        </div>
    </div>

    <div class="form-group row">
        <label class="col-sm-2 col-form-label">@Html.LabelFor(m => m.password)</label>
        <div class="col-sm-10">
            <p class="form-control-plaintext">
                @Html.PasswordFor(m => m.password, new { @class = "form-control", @placeholder = "Password", required = "required" })
            </p>
        </div>
    </div>

    <div class="form-group-lg">
        <input class=" btn btn-primary" type="submit" value="Sign In" />
    </div>
}




