
@{
    ViewBag.Title = "SignIn";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Sign In</h2>

@model SmokeFreeApplication.Models.GeneralUser
@using (Html.BeginForm("SignInAcc", "Account", FormMethod.Post))
{
    @TempData["message"];
    <div class="form-group-lg">
        <label>User Name</label>
        <div class="form-control-lg">
            @Html.TextBoxFor(m => m.userName, new { placeholder = "Username", required = "required" })
        </div>
    </div>

    <div class="form-group-lg">
        <label>Password</label>
        <div class="form-control-lg">
            @Html.PasswordFor(m => m.password, new { placeholder = "Password", required = "required" })
        </div>
    </div>

    <div class="form-group-lg">
        <input class=" btn btn-primary" type="submit" value="Sign In" />
        <button class="btn btn-info"> @Html.ActionLink("Sign Up", "SignUpMember", "Account")</button>
    </div>
}




